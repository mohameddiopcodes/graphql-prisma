{
  "name": "graphql-prisma",
  "version": "1.0.0",
  "description": "sample prisma-grqphql project",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node ./dist",
    "type": "graphql-codegen --config codegen.yml"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, graphql, gql",
    "exec": "ts-node --files -r tsconfig-paths/register ./src"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@graphql-codegen/cli": "3.2.2",
    "@graphql-codegen/typescript": "3.0.2",
    "@graphql-codegen/typescript-resolvers": "3.1.1",
    "@types/node": "^18.15.11",
    "nodemon": "^2.0.22",
    "prisma": "^4.12.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@prisma/client": "^4.12.0",
    "graphql-yoga": "^3.8.0"
  }
}
